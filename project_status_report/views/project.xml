<?xml version="1.0"?>
<odoo>

    <record id="project_add_report_status_form" model="ir.ui.view">
        <field name="name">project_add_report_status</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_generate_report" class="oe_highlight" string="Generate status report" type="object" groups="project.group_project_manager"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action" name="%(project_status_report.act_project_status_from_project)d" icon="fa-dashboard">
                     <field string="Reports" name="report_count" widget="statinfo"/>
                 </button>
            </xpath>
        </field>
    </record>

</odoo>
